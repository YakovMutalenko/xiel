<select class="form-select"
    {{#eachProperty attrs}}{{this.key}}="{{this.value}}"{{/eachProperty}}

    {{#each booleans}}
        {{this}}="{{this}}"
    {{/each}}
		>
{{#each items }}
	<option value="{{ label }}"
        {{#eachProperty attrs}}{{this.key}}="{{this.value}}"{{/eachProperty}}

        {{#each booleans}}
            {{this}}="{{this}}"
        {{/each}}
			>
    {{ label }}
	</option>
{{/each}}
</select>
