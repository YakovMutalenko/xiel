<div class="rb-siteinfo" role="contentinfo">
	<div class="siteinfo-inner u-column-group u-gutter-horizontal">
		{{#if copyright}}
			<div class="u-size-auto">
				<p class="siteinfo-copyright">&copy; {{ copyright }}</p>
			</div>
		{{/if}}
		{{#if items}}
			<div class="u-size-auto u-offset-right">
				<ul class="siteinfo-list">
					{{#each items }}
						<li class="siteinfo-item">
							{{#if link }}
								<a href="{{ link }}" class="siteinfo-link">{{ title }}</a>
							{{else }}
								{{ title }}
							{{/if}}
						</li>
					{{/each}}
					<li class="siteinfo-item">
						<a href="#" class="siteinfo-link"></a>
					</li>
				</ul>
			</div>
		{{/if}}
	</div>
</div>